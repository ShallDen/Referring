<Window x:Class="Referring.Client.EssayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Referring.Client"
        mc:Ignorable="d"
        Title="Реферат" Height="443" Width="768" Icon="Images/ShallDen.png" Style="{DynamicResource MainWindowStyle}" MinHeight="380" MinWidth="640">
    <Grid>
        <TextBox x:Name="essayTextBox" Margin="21,34,22,70" TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto"
                 BorderBrush="#FF61B9E2" BorderThickness="1" Text="{Binding ReferredText, UpdateSourceTrigger=PropertyChanged}" FontFamily="Constantia" IsReadOnly="True"/>
        <Label x:Name="label" Content="Реферат:" HorizontalAlignment="Left" Margin="15,7,0,0" VerticalAlignment="Top" FontFamily="Constantia"/>
        <Button x:Name="closeButton" Content="Закрыть"  Background="{x:Null}" BorderBrush="Black" Margin="0,0,22,19" FontFamily="Constantia" Height="37" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="131"/>

    </Grid>
</Window>
